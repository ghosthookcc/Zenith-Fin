model Session {
  session_id               String                  @id @db.Uuid
  user_id                  BigInt
  jwt_secret_encrypted     String                  @unique
  issued_at                DateTime                @default(now())
  expires_at               DateTime
  revoked_at               DateTime?
  bank_connections         BankConnection[]
  pending_bank_connections PendingBankConnection[]
  user                     User                    @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([user_id])
}
